</globaldata>

<cameradata>
  <pos x="-4" y="3" z="3"/>
  <up x="0" y="1" z="0"/>
  <focus x="0" y="0" z="0"/>
  <heightangle v="30"/>
</cameradata>

<lightdata>
  <id v="0"/>
