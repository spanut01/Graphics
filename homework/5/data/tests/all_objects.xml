<object type="tree" name="root">
  <transblock>
    <translate x="0" y="-0.6" z="0"/>
    <scale x="6" y="0.2" z="6"/>
    <object type="primitive" name="cube" >
      <texture file="image/earth.bmp" u="1" v="1"/>
      <blend value="0.8"/>
      <diffuse r="1" g="1" b="0.5"/>
    </object>
  </transblock>

  <transblock>
    <translate x="-0.8" y="0" z="-0.8"/>
    <rotate x="0" y="1" z="1" a="45"/>
    <object type="primitive" name="cube" >
      <texture file="image/flowers.bmp" u="4" v="4"/>
      <blend value="0.8"/>
      <diffuse r="0" g="1" b="0"/>
      <specular r="0" g="0" b="0"/>
      <reflective r="0.3" g="0.3" b="0.3"/>
      <shine value="20"/>
    </object>
  </transblock>

  <transblock>
    <translate x="0.8" y="0" z="-0.8"/>
    <object type="primitive" name="cube" >
      <texture file="image/sun.bmp" u="1" v="1"/> 
      <blend value="1.0"/>
    </object>
  </transblock>

trans [
  translate 0.8 0 0.8
  object cylinder [
    reflect 0.9 0.9 0.9
    diffuse 0.8 0.8 0.8
    shine 30
    specular 1.0 1.0 1.0
    ]
  ]

trans [
  translate -0.8 0 0.8
  object cone [
    texture image/boccioni.bmp 1 1
